@model RegisterViewModel

@Html.LabelFor(m => m.Email, " ", new { @class = "control-label col-md-2 col-md-offset-2" })

@{
    ViewData["Title"] = "Register";
}


<body class="background">
    <div class="raised-box-center">
    <div class="row">
        <div class="col-md-4 raisedbox">
            <h2>@ViewData["Title"]</h2>
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <h4>Create a new account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <br />
                    <input asp-for="Email" class="form-control input-center" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control input-center" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control input-center" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-default button-size">Register</button>
                
                <div class="form-group spacing">
                    <p>
                        <a asp-action="Login">Already have an account?</a>
                    </p>
                    <p>
                        <a asp-action="ForgotPassword">Forgot your password?</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
        </div>
</body>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
